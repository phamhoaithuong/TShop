@using Model.Model
@model RegisterViewModel
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumb-container">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="index-2.html">Trang chủ</a></li>
            <li class="active">Đăng ký tài khoản</li>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <header class="content-title">
                <h1 class="title">Đăng ký tài khoản</h1>
                <p class="title-desc">Nếu bạn đã có tài khoản vui lòng @Html.ActionLink("Đăng nhập","Login")</p>
            </header>
            <div class="xs-margin"></div><!-- space -->
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    <fieldset>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="input-icon input-icon-user"></span><span class="input-text">Họ và tên&#42;</span></span>
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control input-lg", placeholder = "Họ và tên", required = "required" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div><!-- End .input-group -->
                        <div class="input-group">
                            <span class="input-group-addon"><span class="input-icon input-icon-address"></span><span class="input-text">Địa chỉ&#42;</span></span>
                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control input-lg", placeholder = "Địa chỉ", required = "required",row=4 })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div><!-- End .input-group -->
                        <div class="input-group">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="input-icon input-icon-email"></span><span class="input-text">Email&#42;</span></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = "Nhập email", required = "required" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div><!-- End .input-group -->
                        <div class="input-group">
                            <span class="input-group-addon"><span class="input-icon input-icon-password"></span><span class="input-text">Mật khẩu&#42;</span></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = "Nhập mật khẩu", required = "required" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div><!-- End .input-group -->
                        <div class="input-group">
                            <span class="input-group-addon"><span class="input-icon input-icon-password"></span><span class="input-text">Nhập lại mật khẩu&#42;</span></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", placeholder = "Nhập mật khẩu", required = "required" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div><!-- End .input-group -->
                        <div class="input-group">
                            <input type="submit" value="ĐĂNG KÝ" class="btn btn-custom-2 btn-lg md-margin">
                        </div>
                    </fieldset>
                </div>
            }
        </div>
    </div>
</div>

