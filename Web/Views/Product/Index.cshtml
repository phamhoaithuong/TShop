                        <ul id="product-carousel" class="celastislide-list">
                        @{
                            foreach (string i in Model.ArrayImage)
                            {
                                if (Model.ArrayImage.First() == i)
                                {
                                    <li class="active-slide"><a data-rel='prettyPhoto' href="~/Upload/images/products/@i"><img src="~/Upload/images/products/@i"></a></li>
                                }
                                <li><a data-rel='prettyPhoto' href="~/Upload/images/products/@i"><img src="~/Upload/images/products/@i"></a></li>
                            }
                        }                           
                        </ul><!-- End product-carousel -->
                    </div>

                    <div id="product-image-container">
                        <figure>
                            <img src="~/Upload/images/products/@Model.ArrayImage[0]" alt="Product Big image" id="product-image" data-big="~/Upload/images/products/@Model.ArrayImage[0]">                            
                        </figure>
                    </div><!-- product-image-container -->
                </div><!-- End .col-md-6 -->

                <div class="col-md-6 col-sm-12 col-xs-12 product">
                    <div class="lg-margin visible-sm visible-xs"></div><!-- Space -->
                    <h1 class="product-name">@Model.Product.Name</h1>
                    <ul class="product-list">
                        <li><span>Tình trạng:</span>@(Model.Product.Status==true? "Còn hàng":"Hết hàng")</li>
                        <li><span>Mã sản phẩm:</span>@Model.Product.Code</li>
                        <li><span>Thương hiệu:</span>@Model.Product.Vender.Name</li>
                        @if (Model.Product.OldPrice != null)
                        {
                            <li><span>Giá cũ:</span>@Model.Product.OldPrice VNĐ</li>
                            <li><span>Giá mới:</span>@Model.Product.Price VNĐ</li>
                        }
                        else
                        {
                            <li><span>Giá mới:</span>@Model.Product.Price VNĐ</li>
                        }
                    </ul>
                    <hr>
                    <div class="product-add clearfix">
                        <div class="custom-quantity-input">
                            <input type="text" name="quantity" value="1">
                            <a href="#" onclick="return false;" class="quantity-btn quantity-input-up"><i class="fa fa-angle-up"></i></a>
                            <a href="#" onclick="return false;" class="quantity-btn quantity-input-down"><i class="fa fa-angle-down"></i></a>
                        </div>                      
                        <a href="@Url.Action("AddItem","Cart",new { productId=Model.Product.Id, quantity =1})" class="btn btn-custom-2">
                        </a>
