@using Model.Model
@model IEnumerable<ProductViewModel>
<div class="hot-items carousel-wrapper">
    <header class="content-title">
        <div class="title-bg">
            <h2 class="title">Giảm giá</h2>
        </div><!-- End .title-bg -->
        <p class="title-desc">Only with us you can get a new model with a discount.</p>
    </header>

    <div class="carousel-controls">
        <div id="hot-items-slider-prev" class="carousel-btn carousel-btn-prev">
        </div><!-- End .carousel-prev -->
        <div id="hot-items-slider-next" class="carousel-btn carousel-btn-next carousel-space">
        </div><!-- End .carousel-next -->
    </div><!-- End .carousel-controls -->
    <div class="hot-items-slider owl-carousel">
        @{
            foreach (var i in Model)
            {
                <div class="item">
                    <div class="item-image-container">
                        <figure>
                            <a href="@Url.Action("Index","Product",new { id=i.Product.Id})">
                                <img src="~/Upload/images/products/@i.ArrayImage[0]" alt="item3" class="item-image">
                                <img src="~/Upload/images/products/@i.ArrayImage[1]" alt="item3 Hover" class="item-image-hover">
                            </a>
                        </figure>
                        @if (i.Product.OldPrice != null)
                        {
                            <div class="item-price-container">
                                <span class="old-price">$@i.Product.OldPrice</span>
                                <span class="item-price">$@i.Product.Price</span>
                            </div>
                        }
                        else
                        {
                            <div class="item-price-container">
                                <span class="item-price">$@i.Product.Price</span>
                            </div>
                        }
                        <span class="new-rect">New</span>
                        @if (i.Product.Discount != null)
                        {
                            <span class="discount-rect">-@i.Product.Discount%</span>
                        }
                    </div><!-- End .item-image -->
                    <div class="item-meta-container">
                        <h3 class="item-name"><a href="product.html">@i.Product.Name</a></h3>
                        <div class="item-action">
                            <a href="@Url.Action("AddItem","Cart",new { productId=i.Product.Id, quantity =1})" class="item-add-btn">
                                <span class="icon-cart-text">Mua ngay</span>
                            </a>
                            <div class="item-action-inner">
                                <a href="@Url.Action("CheckOut","Cart")" class="icon-button icon-compare">Checkout</a>
                            </div><!-- End .item-action-inner -->
                        </div><!-- End .item-action -->
                    </div><!-- End .item-meta-container -->
                </div><!-- End .item -->
            }
        }

    </div><!--hot-items-slider -->
    <div class="lg-margin"></div><!-- Space -->
</div><!-- End .hot-items -->
